# Aliases.
[alias]
  c = commit
  st = status
  s = status -s
  df = diff --color --color-words --abbrev
  lg = log --branches --graph --pretty=format:'%C(yellow)%h %C(reset)%s%C(red)%d %C(blue)%an%C(reset), %C(cyan)%ar'
  rank = shortlog -s -n
  br = branch -v --all
  f = flow
  recommit = commit -C ORIG_HEAD
  oops = reset --soft HEAD~1

[merge]
  log = true
[push]
  default = matching
[core]
  excludesfile = ~/dotfiles/git/gitignore_global
  attributesfile = ~/.gitattributes

# Colors.
[color]
  ui = always
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

