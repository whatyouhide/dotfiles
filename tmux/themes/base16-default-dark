# This tmux statusbar config was created by tmuxline.vim
# on Wed, 02 Jul 2014

set -g status-justify "centre"
set -g status "on"
set -g status-left-style "none"
set -g message-command-style "fg=colour7,bg=colour10"
set -g status-right-style "none"
set -g pane-active-border-style "fg=colour0"
set -g status-utf8 "on"
set -g status-style "bg=colour10,none"
set -g message-style "fg=colour7,bg=colour10"
set -g pane-border-style "fg=colour10"
set -g status-right-length "100"
set -g status-left-length "100"
setw -g window-status-activity-style "fg=colour0,bg=colour10,none"
setw -g window-status-separator ""
setw -g window-status-style "fg=colour12,bg=colour10,none"
set -g status-left "#[fg=colour2,bg=colour0] #S #[fg=colour0,bg=colour10,nobold,nounderscore,noitalics]#[fg=colour7,bg=colour10] #{pane_current_path} #[fg=colour10,bg=colour10,nobold,nounderscore,noitalics]#[fg=colour10,bg=colour10,nobold,nounderscore,noitalics]"
set -g status-right "#[fg=colour10,bg=colour10,nobold,nounderscore,noitalics]#[fg=colour12,bg=colour10] %l:%M %p #[fg=colour10,bg=colour10,nobold,nounderscore,noitalics]#[fg=colour7,bg=colour10] #(whoami) #[fg=colour0,bg=colour10,nobold,nounderscore,noitalics]#[fg=colour2,bg=colour0] #h "
setw -g window-status-format "#[fg=colour10,bg=colour10,nobold,nounderscore,noitalics]#[default] #I #W #[fg=colour10,bg=colour10,nobold,nounderscore,noitalics]"
setw -g window-status-current-format "#[fg=colour10,bg=colour10,nobold,nounderscore,noitalics]#[fg=colour7,bg=colour10] #I #W #[fg=colour10,bg=colour10,nobold,nounderscore,noitalics]"
