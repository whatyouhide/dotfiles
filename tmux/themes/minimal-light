set -g status-bg white

set -g message-command-style "fg=black"
set -g message-style "fg=black"
set -g pane-active-border-style "fg=colour0"
set -g pane-border-style "fg=colour10"

set -g status-left-style "none"
set -g status-left-length "100"
set -g status-left "#[fg=colour6][#S] #[fg=colour8]#{pane_current_path} #[fg=colour10]#(osx-battery)"

set -g status-right-style "none"
set -g status-right-length "100"
set -g status-right "#[fg=colour4] %l:%M %p #[fg=colour8]#(whoami) #[fg=colour6]#h"

setw -g window-status-separator ""
setw -g window-status-style "fg=colour12"
setw -g window-status-format "#[fg=colour8] #I #W"
setw -g window-status-current-format "#[fg=colour4] #I #W"
setw -g window-status-activity-style "fg=colour12,bold"
