# This tmux statusbar config was created by tmuxline.vim
# on Mon, 04 Aug 2014

set -g status-justify "centre"
set -g status "on"
set -g status-left-style "none"
set -g message-command-style "fg=colour7,bg=colour11"
set -g status-right-style "none"
set -g pane-active-border-style "fg=colour4"
set -g status-utf8 "on"
set -g status-style "bg=colour13,none"
set -g message-style "fg=colour7,bg=colour11"
set -g pane-border-style "fg=colour11"
set -g status-right-length "100"
set -g status-left-length "100"
setw -g window-status-activity-style "fg=colour4,bg=colour13,none"
setw -g window-status-separator ""
setw -g window-status-style "fg=colour11,bg=colour13,none"
set -g status-left "#[fg=colour15,bg=colour4,bold] #S #[fg=colour4,bg=colour11,nobold,nounderscore,noitalics]#[fg=colour7,bg=colour11] #{pane_current_path} #[fg=colour11,bg=colour13,nobold,nounderscore,noitalics]#[fg=colour11,bg=colour13] %l:%M %p #[fg=colour13,bg=colour13,nobold,nounderscore,noitalics]"
set -g status-right "#[fg=colour13,bg=colour13,nobold,nounderscore,noitalics]#[fg=colour11,bg=colour13] #(osx-battery) #[fg=colour11,bg=colour13,nobold,nounderscore,noitalics]#[fg=colour7,bg=colour11] #(whoami) #[fg=colour4,bg=colour11,nobold,nounderscore,noitalics]#[fg=colour15,bg=colour4] #h "
setw -g window-status-format "#[fg=colour13,bg=colour13,nobold,nounderscore,noitalics]#[default] #I #W #[fg=colour13,bg=colour13,nobold,nounderscore,noitalics]"
setw -g window-status-current-format "#[fg=colour13,bg=colour11,nobold,nounderscore,noitalics]#[fg=colour7,bg=colour11] #I #W #[fg=colour11,bg=colour13,nobold,nounderscore,noitalics]"
