# This tmux statusbar config was created by tmuxline.vim
# on Thu, 19 Jun 2014

set -g status-justify "centre"
set -g status "on"
set -g status-left-style "none"
set -g message-command-style "fg=colour8,bg=colour10"
set -g status-right-style "none"
set -g pane-active-border-style "fg=colour4"
set -g status-utf8 "on"
set -g status-style "bg=colour0,none"
set -g message-style "fg=colour8,bg=colour10"
set -g pane-border-style "fg=colour10"
set -g status-right-length "100"
set -g status-left-length "100"
setw -g window-status-activity-style "fg=colour4,bg=colour0,none"
setw -g window-status-separator ""
setw -g window-status-style "fg=colour12,bg=colour0,none"
set -g status-left "#[fg=colour0,bg=colour4,bold] #S #[fg=colour4,bg=colour10,nobold,nounderscore,noitalics]#[fg=colour8,bg=colour10] #(localip) #[fg=colour10,bg=colour0,nobold,nounderscore,noitalics]#[fg=colour0,bg=colour0,nobold,nounderscore,noitalics]"
set -g status-right "#[fg=colour0,bg=colour0,nobold,nounderscore,noitalics]#[fg=colour12,bg=colour0] %l:%M %p #[fg=colour10,bg=colour0,nobold,nounderscore,noitalics]#[fg=colour8,bg=colour10] #(whoami) #[fg=colour4,bg=colour10,nobold,nounderscore,noitalics]#[fg=colour0,bg=colour4] #h "
setw -g window-status-format "#[fg=colour0,bg=colour0,nobold,nounderscore,noitalics]#[default] #I #W #[fg=colour0,bg=colour0,nobold,nounderscore,noitalics]"
setw -g window-status-current-format "#[fg=colour0,bg=colour10,nobold,nounderscore,noitalics]#[fg=colour8,bg=colour10] #W #[fg=colour10,bg=colour0,nobold,nounderscore,noitalics]"
